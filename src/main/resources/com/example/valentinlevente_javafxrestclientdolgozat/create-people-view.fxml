<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="20.0" prefHeight="480.0" prefWidth="640.0" vgap="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.valentinlevente_javafxrestclientdolgozat.CreatePeopleController">
    <columnConstraints>
        <ColumnConstraints maxWidth="125.0" minWidth="50.0" prefWidth="101.0" />
        <ColumnConstraints hgrow="ALWAYS" maxWidth="405.0" minWidth="100.0" prefWidth="400.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="251.0" minHeight="10.0" prefHeight="251.0" valignment="TOP" vgrow="SOMETIMES" />
    </rowConstraints>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Name:" GridPane.halignment="RIGHT" />
        <Label text="Location:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
        <Label text="Age:" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
        <Label text="Phone Number:" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
        <TextField fx:id="nameField" GridPane.columnIndex="1" />
        <TextField fx:id="locationField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Spinner fx:id="ageField" prefWidth="2000.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <TextField fx:id="phoneNumberField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Button fx:id="submitButton" mnemonicParsing="false" onAction="#submitClick" prefWidth="2000.0" text="Submit" GridPane.columnSpan="2" GridPane.rowIndex="4" />
    </children>
</GridPane>
